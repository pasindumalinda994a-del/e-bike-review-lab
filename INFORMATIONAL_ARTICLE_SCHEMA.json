{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Informational Article Content Structure",
  "description": "Schema for informational/evergreen articles",
  "type": "object",
  "required": [
    "id",
    "slug",
    "categorySlug",
    "category",
    "contentType",
    "title",
    "h1",
    "metaDescription",
    "coreSections"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (usually same as slug)"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly article slug (e.g., 'is-it-worth-getting-an-electric-bike-2025')"
    },
    "categorySlug": {
      "type": "string",
      "description": "URL-friendly category identifier (e.g., 'electric-bikes')"
    },
    "category": {
      "type": "string",
      "description": "Display name for category (e.g., 'Electric Bikes')"
    },
    "contentType": {
      "type": "string",
      "enum": ["information"],
      "description": "Always 'information' for these articles"
    },
    "title": {
      "type": "string",
      "description": "Page title (include year if relevant)"
    },
    "h1": {
      "type": "string",
      "description": "Main headline (usually same as title)"
    },
    "metaDescription": {
      "type": "string",
      "description": "Meta description (150-160 characters)"
    },
    "heroImage": {
      "type": "string",
      "description": "Path to hero image (e.g., '/images/products/hero6.jpg')"
    },
    "cardImage": {
      "type": "string",
      "description": "Path to card/thumbnail image"
    },
    "articleHeroImage": {
      "type": "string",
      "description": "Path to article hero image"
    },
    "heroImageAlt": {
      "type": "string",
      "description": "Alt text for hero image"
    },
    "introductionHeading": {
      "type": "string",
      "description": "Introduction section heading (e.g., 'Introduction: Should You Join the E-Bike Revolution?')"
    },
    "introductionHook": {
      "type": "string",
      "description": "Compelling opening paragraph - create a relatable scenario, ask a thought-provoking question, or make a bold statement"
    },
    "snippetAnswer": {
      "type": "string",
      "description": "Direct answer to the main question in 2-3 sentences. Include key benefits, costs, or decision factors."
    },
    "roadmap": {
      "type": "string",
      "description": "Explain what the reader will learn in this guide. Set expectations for the content structure."
    },
    "introduction": {
      "type": "string",
      "description": "Single paragraph introduction (alternative to introductionHook)"
    },
    "introductionParagraphs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of introduction paragraphs (alternative format)"
    },
    "secondaryIntroduction": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Additional introduction content"
    },
    "estimatedReadingTime": {
      "type": "number",
      "description": "Estimated reading time in minutes (e.g., 12)"
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO date string (e.g., '2025-11-12T09:00:00.000Z')"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO date string for last update (optional)"
    },
    "coreHeading": {
      "type": "string",
      "description": "Main heading for core sections (e.g., 'The Core Truth: Weighing the Pros and Cons')"
    },
    "coreSections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Section heading (e.g., 'The Pros: Why E-Bikes Are Changing the Game')"
          },
          "paragraphs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional array of paragraph strings (sets context before bullets)"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "text"
              ],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Detailed bullet point text (can be multiple sentences with specific details, numbers, or examples)"
                }
              }
            },
            "description": "Array of bullet point objects"
          }
        }
      },
      "description": "Array of core section objects (typically 5-7 sections)"
    },
    "contextHeading": {
      "type": "string",
      "description": "FAQ section heading (e.g., 'Answering Your Other Electric Bike Questions')"
    },
    "contextFAQs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "question",
          "answer"
        ],
        "properties": {
          "question": {
            "type": "string",
            "description": "FAQ question"
          },
          "answer": {
            "type": "string",
            "description": "Comprehensive answer (3-5 sentences, detailed and thorough)"
          }
        }
      },
      "description": "Array of FAQ objects (typically 5-7 FAQs)"
    },
    "takeawayHeading": {
      "type": "string",
      "description": "Takeaways section heading (e.g., 'Key Criteria for Your E-Bike Decision')"
    },
    "takeawayBullets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Key takeaway point (should be actionable or decision-oriented)"
          }
        }
      },
      "description": "Array of takeaway objects (typically 3-5 takeaways)"
    },
    "relatedGuides": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "url"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Article title"
          },
          "url": {
            "type": "string",
            "description": "Article URL (e.g., '/electric-bikes/guide-slug')"
          }
        }
      },
      "description": "Optional array of related article links"
    },
    "subheadline": {
      "type": "string",
      "description": "Optional subheadline (alternative: subtitle)"
    },
    "subtitle": {
      "type": "string",
      "description": "Optional subtitle (alternative: subheadline)"
    },
    "whatIsItHeading": {
      "type": "string",
      "description": "Optional 'What Is It' section heading"
    },
    "whatIsItDefinition": {
      "type": "string",
      "description": "Optional definition text"
    },
    "types": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              }
            }
          }
        ]
      },
      "description": "Optional array of types/variants"
    },
    "whyConsider": {
      "type": "string",
      "description": "Optional 'Why Consider It' text"
    },
    "pulloutQuotes": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              }
            }
          }
        ]
      },
      "description": "Optional array of pullout quotes"
    },
    "didYouKnow": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            }
          }
        ]
      },
      "description": "Optional array of 'Did You Know' facts"
    },
    "comparisonTable": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        {
          "type": "object",
          "properties": {
            "headers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "rows": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      ],
      "description": "Optional comparison table"
    }
  }
}

