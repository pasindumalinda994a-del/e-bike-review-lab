{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Money Article Content Structure",
  "description": "Schema for commercial/affiliate money articles",
  "type": "object",
  "required": [
    "categorySlug",
    "category",
    "contentType",
    "slug",
    "title",
    "seoTitle",
    "h1",
    "metaDescription",
    "products",
    "comparisonTable"
  ],
  "properties": {
    "categorySlug": {
      "type": "string",
      "description": "URL-friendly category identifier (e.g., 'electric-bikes')"
    },
    "category": {
      "type": "string",
      "description": "Display name for category (e.g., 'Electric Bikes')"
    },
    "contentType": {
      "type": "string",
      "enum": ["money"],
      "description": "Always 'money' for these articles"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly article slug (e.g., 'best-electric-bikes-2025')"
    },
    "title": {
      "type": "string",
      "description": "Page title (55-60 characters recommended)"
    },
    "seoTitle": {
      "type": "string",
      "description": "SEO title (should differ from h1, 55-60 chars)"
    },
    "h1": {
      "type": "string",
      "description": "Main headline (can be longer, more descriptive)"
    },
    "metaDescription": {
      "type": "string",
      "description": "Meta description (~155 characters, question format improves CTR)"
    },
    "heroImage": {
      "type": "string",
      "description": "Path to hero image (e.g., '/images/products/hero1.jpg')"
    },
    "cardImage": {
      "type": "string",
      "description": "Path to card/thumbnail image"
    },
    "articleHeroImage": {
      "type": "string",
      "description": "Path to article hero image (defaults to '/default-og.png' if not provided)"
    },
    "heroImageAlt": {
      "type": "string",
      "description": "Alt text for hero image (defaults to title or h1)"
    },
    "introduction": {
      "type": "string",
      "description": "Single paragraph introduction (legacy support)"
    },
    "introductionParagraphs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of introduction paragraphs (preferred)"
    },
    "secondaryIntroduction": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Single string or array of secondary introduction paragraphs"
    },
    "estimatedReadingTime": {
      "type": "number",
      "description": "Estimated reading time in minutes (e.g., 15)"
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO date string (e.g., '2025-01-15T00:00:00Z')"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO date string for last update (optional)"
    },
    "topProductsHeading": {
      "type": "string",
      "description": "Heading for products section (defaults to 'Detailed Product Reviews')"
    },
    "topProductsIntro": {
      "type": "string",
      "description": "Optional intro text before products (shown in 'What to Expect' section)"
    },
    "productCtaLabel": {
      "type": "string",
      "description": "CTA button text (defaults to 'Check Price on Amazon')"
    },
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "rank",
          "name",
          "badge",
          "imageUrl",
          "description",
          "keyFeatures",
          "performanceNotes",
          "whoItsBestFor",
          "pros",
          "cons",
          "affiliateLink"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier (e.g., 'aventon-level-3')"
          },
          "rank": {
            "type": "number",
            "description": "Ranking number (1, 2, 3, etc.)"
          },
          "name": {
            "type": "string",
            "description": "Full product name with badge (e.g., 'Aventon Level 3 - Best Overall Electric Bike')"
          },
          "badge": {
            "type": "string",
            "description": "Price badge (e.g., 'Around $2,199' or 'Starting at $999')"
          },
          "imageUrl": {
            "type": "string",
            "description": "Path to product image (e.g., '/images/1.png')"
          },
          "description": {
            "type": "string",
            "description": "2-3 sentence product description"
          },
          "keyFeatures": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of key feature strings"
          },
          "performanceNotes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of detailed performance paragraphs"
          },
          "whoItsBestFor": {
            "type": "string",
            "description": "1-2 sentences describing target audience"
          },
          "pros": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of positive points"
          },
          "cons": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of negative points"
          },
          "affiliateLink": {
            "type": "string",
            "format": "uri",
            "description": "Affiliate URL (e.g., 'https://example.com/product')"
          }
        }
      }
    },
    "comparisonTable": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "model",
          "price"
        ],
        "properties": {
          "model": {
            "type": "string",
            "description": "Product model name"
          },
          "affiliateLink": {
            "type": "string",
            "format": "uri",
            "description": "Optional affiliate link (if provided, price becomes clickable)"
          },
          "price": {
            "type": "string",
            "description": "Price display (e.g., '$2,199')"
          },
          "motor": {
            "type": "string",
            "description": "Motor specification (e.g., '500W')"
          },
          "battery": {
            "type": "string",
            "description": "Battery specification (e.g., '720Wh')"
          },
          "range": {
            "type": "string",
            "description": "Range specification (e.g., '38+ mi')"
          },
          "weight": {
            "type": "string",
            "description": "Weight specification (e.g., '68 lbs')"
          },
          "capacity": {
            "type": "string",
            "description": "Weight capacity (for cargo bikes)"
          },
          "topSpeed": {
            "type": "string",
            "description": "Maximum speed"
          },
          "bestFor": {
            "type": "string",
            "description": "Best use case (e.g., 'Overall Best')"
          }
        }
      }
    },
    "buyersGuideTitle": {
      "type": "string",
      "description": "Main buyer's guide title (defaults to 'Buyer's Guide')"
    },
    "buyersGuideSections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Section heading (e.g., 'Understanding E-Bike Classes')"
          },
          "paragraphs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of paragraph strings"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Optional array of bullet points"
          }
        }
      },
      "description": "Array of guide section objects (preferred for detailed guides)"
    },
    "buyersGuide": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        }
      ],
      "description": "Simple buyer's guide (fallback if buyersGuideSections not provided)"
    },
    "relatedGuides": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "url"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Article title"
          },
          "url": {
            "type": "string",
            "description": "Article URL (e.g., '/electric-bikes/guide-slug')"
          }
        }
      },
      "description": "Optional array of related article links"
    }
  }
}

